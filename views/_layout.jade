mixin linkbutton(link, text)
  .more-div
    span.more-wrap
      a(href=link, class='more-button')= text

block vars
  -var pageTitle = 'Layout'
  -var pageDesc = 'Description of this page'
  -var mastheadImg ='masthead_img.jpg'

-var mastheadImgUrl = './img/mastheads/' + mastheadImg

doctype html
html(prefix='og: http://ogp.me/ns#')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content="#{pageDesc}")
    meta(name='author', content= "Troop 151 Broomall, PA")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= pageTitle

    <meta property="og:title" content="#{pageTitle}" />
    <meta property="og:description" content="#{pageDesc}" />
    <meta property="og:type" content="website" />
    //- <meta property="og:url" content="" />
    <meta property="og:image" content="#{mastheadImgUrl}" />

    != css()

  body
    #main
      header
        include _top_nav.jade
        section#masthead(style='background: no-repeat center/cover url(#{mastheadImgUrl})')
          header
            block masthead
              h1 Troop 151, Broomall PA
              p A Scout-Led Troop
              p Chartered to Marple Presbyterian Church

      #content
        block content
        article#contact
          header
            h3 Contact Us
          #contact-form
            include _contact.jade

    include _foot.jade

    != js()
