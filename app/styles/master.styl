@import '_settings'
@import 'jeet'
@import '_colors'
@import 'https://fonts.googleapis.com/css?family=Carter+One|Sanchez';

normalize-css()
base()

lt_color = scoutingRed
lt_text_color = white
dk_color = scoutingBlue
dk_text_color = white
hf_bg_color = #222
hf_text_color = white

title_font()
  font-family "Carter One"
subtitle_font()
  font-family "Sanchez"

html
  font-size 100%
  +below(600px)
    font-size 75%

body
  padding 0
  margin-top 0
  background-color #fafafa

#top_nav
  top 0
  nav(1, hf_bg_color, hf_text_color, true)
  a
    text-decoration: none
  h1
    margin 0
    subtitle_font()

#main
  margin-top 43px
  padding-left auto
  padding-right auto

#masthead
  height 100vh
  width 100%
  background no-repeat center/cover LightSlateGray
  color hf_text_color
  text-shadow 0.1rem 0.1rem 0.2rem black
  text-align center
  .masthead-content
    vertically-align()
  p
    text-transform none
    font-size 1.5rem
    subtitle_font()
    margin 0.3em 0
  h1
    font-size 4rem
    title_font()
    font-weight normal
    text-transform uppercase

#content
  h1
    font-size 3rem
    title_font()
    font-weight normal
    text-shadow 0.1rem 0.1rem 0.2rem #bdbdbd
    text-align center
    text-transform uppercase
    color hf_bg_color
    margin-bottom 0.3rem
  h2
    font-size 1.2rem
    subtitle_font()
    margin 0.3rem 0
    text-align center

.prose-page
  max-width 55rem
  width 90%
  margin 0 auto

.toc
  subtitle_font()
  ul
    ul none
    padding-left 0
    text-align center
    font-size 1.2rem
  a
    color darken(dk_color, 50%)
    text-decoration none
    hover-color lighten(dk_color, 30%) true

[class$='-section']
  a
    color darken(dk_color, 50%)
    text-decoration none
    hover-color lighten(dk_color, 30%) true

.tool-section
  dt
    font-weight bold
    font-size 1.2rem
    margin-top 0.8rem
    margin-bottom 0.4rem
  dt:after
      content ":"
  dd
    margin-left 1.5rem
    margin-bottom 0.5rem
    a
      text-decoration underline

article
  padding-top 10vh
  padding 0 2.5%
  padding-bottom 3rem

article + article
  border-top 0.5rem solid dk_color

.col-thirds
  column(1/3)
  img
    max-width 200px
    width 80%
    display block
    margin 0 auto
  +below(600px)
    stack()

#about p
  text-align justify
  font-size 1rem
  subtitle_font()

.event-gallery
  column(1/3, $cycle: 3)
  height 60vh
  position relative
  margin-bottom 1.5rem
  img
    width 100%
    height 100%
    object-fit cover
    position absolute
    top 0
    left 0
    z-index 1
  .background-shade
    position absolute
    bottom 0
    width 100%
    height 30%
    background-color alpha(lt_color, 0.7)
    border-top 1rem solid alpha(dk_color, 0.7)
    margin 0
    padding 0
    z-index 2
  .event-desc
    color lt_text_color
    margin 0
    padding 0.5rem
  h4
    margin 0
    subtitle_font()
  p
    margin 0.5rem 0 0 0
    font-style italic
    font-size 0.9rem
    text-align justify
    hyphenation()
  p:before
    content open-quote
  p:after
    content close-quote
  +below(800px)
    column(1)
    stack()

.events-foot
  font-style: italic
  display: table
  margin 0 auto
  color dk_color

.values-col
  column(1/2)
  text-align center
  dt
    subtitle_font()
    font-size 1.2rem
    margin-bottom 0.75rem
    text-decoration underline
  dd
    margin-left 0
    margin-bottom 0.25rem
  +below(600px)
    stack()

.leader-gallery
  column(1/3, $cycle: 3)
  margin-bottom 1.5rem
  text-align center
  img
    max-width 200px
    width 90%
    padding 0 auto
    border-radius 50%
  .leader_name
    subtitle_font()
    font-size 1.2rem
    margin-bottom 0.2rem
  .leader_title
    font-weight bold
    margin-top 0.2rem
  +below(600px)
    column(1)
    stack()
    text-align center

.eagle-gallery
  column(1/3, $cycle:3)
  subtitle_font()
  margin-bottom 0.15rem
  img
    height 3rem
  .eagle-name
    font-weight bold
  p
    margin 0.2em 0
  .eagle-logo
    display inline-block
    vertical-align middle
  .eagle-data
    display inline-block
    vertical-align middle
  +below(600px)
    column(1)

.col-wrap
  clearfix()
  margin-bottom 1rem

.more-div
  clearfix()

.more-wrap
  display table
  margin 0 auto

.more-button
  button(lt_color, large, lt_text_color)

.formcol
  column(1/2)
  +below(600px)
    stack()
    center()

#contact-form
  .form
    margin-top 0.7rem
  +html5-inputs()
    input(dk_color, 95%)
    font-size 1.15rem
  label
    label(block)
  input[type=submit]
    clearfix()
    button(dk_color, large, dk_text_color)
    margin 0 auto
    display table
  textarea
    height 170px

footer
  background-color hf_bg_color
  min-height 50vh
  color hf_text_color
  padding 5vh 0
  h4
    margin-bottom 0.75rem
  p
    margin 0.5rem 1rem
  a
    color lighten(lt_color, 75%)
    text-decoration none
    hover-color lt_color true
  ul
    ul none
    padding-left 0
  +below(600px)
    .col-thirds
      text-align center
      li
        padding 0

.join-button
  button(lt_color, large, lt_text_color)
  display table
  margin 1em auto

.foot-img
    margin-top 1.33rem !important

.foot-end
  display table
  margin 2rem auto
  padding 0 3rem
  border-top solid 1px hf_text_color
