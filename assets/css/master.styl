@import '_settings'
@import 'jeet'
@import '_colors'

normalize-css()
base()

color1 = scoutingRed
color2 = scoutingBlue

body
  padding 0
  margin-top 0
  background-color Gainsboro

#top_nav
  top 0px
  nav(1, #222, white, true)
  a
    text-decoration: none
  h1
    margin 0

#main
  margin-top 43px
  padding-left auto
  padding-right auto

article header
  text-align center
  text-transform uppercase

#home-masthead
  height 80vh
  width 100%
  padding-top 6em
  background no-repeat center/cover LightSlateGray
  color white
  text-shadow 0.1em 0.1em 0.2em black
  p
    font-style italic
    text-transform none
    font-size 150%
  h1
    font-size 3em

.home-article
  min-height 100vh
  padding-top 20vh
  padding-right 2.5%
  padding-left 2.5%
  padding-bottom 3em
  h3
    font-size 3em

.home-article + .home-article
  border-top 2vh solid color2

.col-thirds
  col(1/3)
  img
    max-width 200px
    width 80%
    display block
    margin 0 auto
  p
    text-align: justify

.event-gallery
  col(1/3, cycle: 3)
  height 60vh
  position relative
  margin-bottom 1.5em
  img
    width 100%
    height 100%
    object-fit cover
    position absolute
    top 0
    left 0
    z-index 1
  .background-shade
    position absolute
    bottom 0
    width 100%
    height 30%
    background-color alpha(color1, 0.7)
    border-top 1em solid alpha(color2, 0.7)
    margin 0
    padding 0
    z-index 2
  .event-desc
    color white
    margin 0
    padding 0.5em
  h4
    margin 0
  p
    margin 0.5em 0 0 0
    font-style italic
    font-size 0.9em
    text-align justify
  p:before
    content open-quote
  p:after
    content close-quote

.events-foot
  font-style: italic
  display: table
  margin 0 auto
  color color2

.col-wrap
  cf()
  margin-bottom 1em

.more-div
  cf()

.more-wrap
  display table
  margin 0 auto

.more-button
  button(color1, large, white)

.formcol
  col(1/2)

#contact-form
  .form
    margin-top 0.7em
  +html5-inputs()
    input(color2, 95%)
    font-size 115%
  label
    label(block)
  input[type=submit]
    cf()
    button(color2, large, white)
    margin 0 auto
    display table
  textarea
    height 170px

footer
  background-color #222
  min-height 50vh
  color white
  padding 5vh 0
  h4
    margin-bottom 0.75em
  p
    margin 0.5em 1em
  a
    color white
    text-decoration none
    hover-color color1 true
  ul
    ul none
    padding-left 0

.join-button
  button(color1, large, white)
  display table
  margin 1em auto

.foot-img
    margin-top 1.33em !important

.foot-end
  display table
  margin 2em auto
  padding 0 3em
  border-top solid 1px white
