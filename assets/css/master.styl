@import '_settings'
@import 'jeet'

normalize-css()
base()

body
  padding 0
  margin-top 0

#top_nav
  top 0px
  nav(1, #222, white, true)
  a
    text-decoration: none
  h1
    margin 0

#main
  margin-top 43px
  padding-left auto
  padding-right auto

article header
  text-align center
  text-transform uppercase

#masthead
  height 80vh
  width 100%
  padding-top 6em
  background no-repeat center/cover url(../img/masthead_img.jpg)
  color white
  text-shadow 0.1em 0.1em 0.2em black
  p
    font-style italic
    text-transform none

#content
  width 95%
  margin 0 auto

.col-thirds
  col(1/3)

.col-wrap
  cf()

.more-div
  cf()

.more-wrap
  margin 0 auto

.more-button
  button(red, large, white)
