@import '_settings'
@import 'jeet'

normalize-css()
base()

body
  padding 0
  margin-top 0
  background-color Gainsboro

#top_nav
  top 0px
  nav(1, #222, white, true)
  a
    text-decoration: none
  h1
    margin 0

#main
  margin-top 43px
  padding-left auto
  padding-right auto

article header
  text-align center
  text-transform uppercase

#home-masthead
  height 80vh
  width 100%
  padding-top 6em
  background no-repeat center/cover LightSlateGray
  color white
  text-shadow 0.1em 0.1em 0.2em black
  p
    font-style italic
    text-transform none

.home-article
  min-height 100vh
  padding-top 20vh
  padding-right 2.5%
  padding-left 2.5%
  h3
    font-size 3em

.home-article + .home-article
  border-top 2vh solid #003f87

footer
  background-color #202020
  min-height 50vh
  color white

.col-thirds
  col(1/3)
  img
    max-width 200px
    width 80%
    display block
    margin 0 auto
  p
    text-align: justify

.event-gallery
  col(1/3, cycle: 3)
  height 60vh
  position relative
  margin-bottom 1.5em
  img
    width 100%
    height 100%
    object-fit cover
    position absolute
    top 0
    left 0
    z-index 1
  .background-shade
    position absolute
    bottom 0
    width 100%
    height 30%
    background-color #ce112677
    border-top 1em solid #003f8777
    margin 0
    padding 0
    z-index 2
  .event-desc
    color white
    margin 0
    padding 0.5em
  h4
    margin 0
  p
    margin 0.5em 0 0 0
    font-style italic
    font-size 0.9em
    text-align justify
  p:before
    content open-quote
  p:after
    content close-quote



.col-wrap
  cf()

.more-div
  cf()

.more-wrap
  display table
  margin 0 auto

.more-button
  button(red, large, white)
